<html>
  <h1>Chitter</h1>
  <h1><% if current_user %>
    Welcome <%= current_user.username %>
    <% end %>
  </h1>
  <ul id="peeps">
    <% @peeps.each do |peep| %>
      <li> <%= peep.message %><br/>
           <%= peep.user.name %> | @<%= peep.user.username %><br/>
           <%= peep.time.strftime(format = "%H:%M | %D") %>
      </li>
    <% end %>
  </ul>
</html>
